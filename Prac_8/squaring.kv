BoxLayout:
    orientation: 'vertical'

    TextInput:
        id: input_number
        text: '7'
        font_size: 48
        multiline: False

    Button:
        text: 'Square'
        on_press: app.calculate_square(input_number.text)

    Label:
        id: output_label
        font_size: 48
        color: (0, 1, 1, 1)  # Cyan color for text
        text: '0'  # Initial display text
