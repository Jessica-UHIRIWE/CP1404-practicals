BoxLayout:
    orientation: 'vertical'

    Button:
        text: 'Clear'
        on_press: app.clear_fields()

    TextInput:
        id: name_input
        text: ''
        hint_text: 'Type your name here'

    Button:
        text: 'Greet'
        on_press: app.greet_user()

    Label:
        id: greeting_label
        text: 'Enter your name'
        color: (1, 1, 0, 1)  # Text color set to yellow
