BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'

        TextInput:
            id: miles_input
            text: '34'
            font_size: 48
            on_text: app.update_conversion()

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25

            Button:
                text: 'Up'
                on_press: app.adjust_miles(1)

            Button:
                text: 'Down'
                on_press: app.adjust_miles(-1)

    Label:
        id: km_output
        font_size: 48
        text: root.km_text
        color: (1, 1, 0, 1)  # Yellow text color
